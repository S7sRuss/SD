{
open Parser

exception UnknownToken of char
}

let digit = ['0'-'9']
let char = ['a'-'z' 'A'-'Z']

rule token = parse
	| [' ' '\t' '\r' '\n' ] { token lexbuf }
	| ";;" { EOL }
	| '+' { PLUS } 
	| '-' { MINUS } 
	| '*' { MULT } 
	| '/' { DIV } 
	| '(' { LPAR }
	| ')' { RPAR }
	| '{' { CLPAR }
	| '}' { CRPAR }
	| '=' { ASSIGN }
	| '!' { DEREF }
	| ',' { SEQ }
	| '.' { TYPEOF }
	| "==" { EQUAL }
	| "not" { NOT }
	| "decl" { DECL }
	| "in" { IN }
	| "if" { IF }
	| "else" { ELSE }
	| "while" { WHILE }
	| "==" { EQUAL }
	| "var" { VAR }
	| "free" { FREE }
	| "skip" {SKIP}
	| digit+ as num { INT (int_of_string num) }
	| char (char | digit)* as word { NAME word }
	| '"' (char|digit)* '"' as s { STRING s }
	| _ as tk { raise (UnknownToken tk) }
	| eof { raise End_of_file }